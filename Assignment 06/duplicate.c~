#include<stdio.h>
int store[100][100];
int ferrySize,num;

void loadFerry(int *cars,int size,int numCars){
	int i,j,sum,carSize;
	int LeftRight[numCars+1];
//	Set the valid bit in the Store 2D-Array.
//	This is required during backtracking.
	sum=0;
	for(i=0;i<numCars+1;i++){
		carSize = cars[i];
		sum = sum + cars[i];
		for(j=0;j<size+1;j++){
			store[i][j] = 0;
			if(i!=0){
				if(j==0){
					if(sum <= size){
						store[i][j] = 1;
					}
					continue;
				}
				if(j == carSize){
					if(sum - j <= size){
						store[i][j] = 1;
					}
					continue;				
				}
				if(store[i-1][j] == 1){
					if(sum - j <= size){
						store[i][j] = 1;
					}
					continue;				
				}
				if(store[i-1][j-carSize] == 1){
					store[i][j] = 1;
					continue;
				}
			}
		}
	}


//	Backtrack the Store 2D-Array and store left/rignt in LeftRight array
	i=numCars;
	j=size;
	while(i>0 && j>=0){
		carSize = cars[i];
		LeftRight[i] = -1;
		if(store[i][j] == 0){
			i--;			
			continue;
		}
		if(store[i][j] == 1){
			if(store[i-1][j] == 1){
				LeftRight[i] = 0;
			}else if(store[i-1][j] == 0){
				LeftRight[i] = 1;
				j = j - carSize;
			}
		}
		i--;
	}

//	Output the nuber of cars that can be accomodated in the given ferry
//	Your code goes here for the maximum number of cars
	int total = 0;
	for(i=1;i<=numCars;i++) {
		if(LeftRight[i] == -1) 
			break;
		total += 1;
	}
	printf("%d\n",total);
//	Print the contents of LeftRight array
	for(i=1;i<=numCars;i++){
		if(LeftRight[i] == 1)
			printf("L\n");
		else if(LeftRight[i] == 0)
			printf("R\n");
	}
//
}

int main(){
	int i;
	scanf("%d",&ferrySize);
	scanf("%d",&num);
	int cars[num+1];
	for(i=1;i<num+1;i++){
		scanf("%d",&cars[i]);
	}

	printf("Size of ferry: %d\n",ferrySize);
	printf("No of Cars: %d\n",num);
	cars[0] = 0;
	for(i=1;i<num+1;i++){
		printf("%d ",cars[i]);
	}
	printf("\n");

	loadFerry(cars,ferrySize,num);
	return 0;
}
